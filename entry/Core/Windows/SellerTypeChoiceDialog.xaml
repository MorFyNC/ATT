<Window x:Class="entry.SellerTypeChoiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:entry"
        mc:Ignorable="d"
        Title="SellerTypeChoiceDialog" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" Grid.ColumnSpan="2" Grid.Row="0" Text="Вы желаете добавить нового продавца или выбрать существующего?" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"></TextBlock>
        <Button x:Name="New" Grid.Row="1" Grid.Column="0" Content="Новый" Margin="20 10 20 10" Click="New_Click"></Button>
        <Button x:Name="Existing" Grid.Row="1" Grid.Column="1" Content="Существующий" Margin="20 10 20 10" Click="Existing_Click"></Button>
    </Grid>
</Window>
