<Window x:Class="entry.ExistingSellerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:entry"
        mc:Ignorable="d"
        Title="ExistingSellerWindow" Height="150" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 20 0 0" Text="Выберите продавца"></TextBlock>
        <ComboBox x:Name="SellerCB" DisplayMemberPath="Fullname" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 40 0 0" Width="200"></ComboBox>
        <Button x:Name="Ok" Grid.Row="1" Grid.Column="0" Content="Ок" Margin="20 10 20 10" Click="Ok_Click"></Button>
        <Button x:Name="Cancel" Grid.Row="1" Grid.Column="1" Content="Отмена" Margin="20 10 20 10" Click="Cancel_Click"></Button>
    </Grid>
</Window>
